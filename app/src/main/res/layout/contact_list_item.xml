<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.priyanshu.assignment.TabActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/contactname"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:textSize="15sp"
        android:hint="name"
        android:layout_marginStart="5dp"
        app:layout_constraintRight_toLeftOf="@+id/contactnumber"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/contactnumber"
        android:layout_marginEnd="11dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contactnumber" />

    <TextView
        android:id="@+id/contactnumber"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:hint="number"
        android:textSize="15sp"
        android:layout_marginStart="216dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="5dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="202dp" />
</android.support.constraint.ConstraintLayout>